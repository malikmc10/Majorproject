@model JPSBillPayment.ViewModels.PaymentViewModel
@{

    ViewBag.Title = "Make Payment";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<style>
    #signupPic {
        width: 100%;
        height: 230px;
    }

    #logi {
        width: 70px;
        height: 70px;
    }
</style>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<div class="container" style="background-color:#F0F0F0">
    <img src="~/images/CreditCardColor.jpg" id="signupPic" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <header class="card-header">
                    <a href="#" class="float-right btn btn-outline-primary mt-1">Quick Payment</a>

                    <img src="~/images/logo2.png" />
                </header>
                <article class="card-body">
                    <form asp-action="Make">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="text-danger">@ViewBag.Test</div>
                        <div class="text-danger">@ViewBag.Test2</div>
                        <div class="text-danger">@ViewBag.Test3</div>
                        <div class="text-danger">@ViewBag.Test4</div>
                        <div class="form-group">

                            <label asp-for="premisesNum"></label>
                            <input class="form-control" asp-for="premisesNum" name="prem" value="@ViewBag.Prem" placeholder="@ViewBag.Prem" />
                            <span asp-validation-for="premisesNum" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <label asp-for="customerId"></label>
                            <input asp-for="customerId" readonly class="form-control" value="@ViewBag.userid" placeholder="@ViewBag.userid" />
                            <span asp-validation-for="customerId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Fname"></label>
                            <input asp-for="Fname" class="form-control" name="holder" />
                            <span asp-validation-for="Fname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="cardNumber"></label>
                            <input asp-for="cardNumber" class="form-control" name="CardNumb" />
                            <span asp-validation-for="cardNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="amountPaid"></label>
                            <input asp-for="amountPaid" readonly class="form-control" name="Due" value="@ViewBag.Sum" placeholder="@ViewBag.Sum" />
                            <span asp-validation-for="amountPaid" class="text-danger"></span>
                        </div>

                        <input type="submit" value="Pay" class="btn btn-primary btn-block" />

                    </form>
                </article>

            </div>
        </div>
    </div>
</div>

<br>
<article class="bg-secondary mb-3">
    <div class="card-body text-center">
        <h3 class="text-white mt-3">Make Payments So much Easier!</h3>
        <p class="h5 text-white">
            Use JPS Online  <br> for E-Payments, Customer Service, Updates
            and product landing pages
        </p>   <br>
        <p>
            <a class="btn btn-warning" asp-controller="Home" asp-action="Index">
                Back To Home Page
                <i class="fa fa-window-restore "></i>
            </a>
        </p>
    </div>
    <br><br>
</article>
